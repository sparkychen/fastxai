# 在线服务配置
API_PORT=8000
WORKERS=8
LOG_LEVEL=info

# Redis 配置（队列+缓存）
REDIS_HOST=redis-cluster.default.svc.cluster.local
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
CELERY_BROKER=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}
CELERY_BACKEND=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# LangChain 1.0 配置
LANGCHAIN_CACHE_TYPE=redis  # 启用 Redis 缓存
LANGCHAIN_REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}
LANGCHAIN_PROJECT=enterprise_rag_evaluation

# RAGAS 0.4.1 配置
RAGAS_BATCH_SIZE=64
RAGAS_CACHE_ENABLE=True
RAGAS_CACHE_DIR=/tmp/ragas_cache
RAGAS_LLM_MODEL=qwen-plus
RAGAS_LLM_API_KEY=your-private-llm-api-key

# Milvus 向量存储配置
MILVUS_HOST=milvus.default.svc.cluster.local
MILVUS_PORT=19530
MILVUS_COLLECTION=enterprise_knowledge_base

# Doris 配置（评估结果存储）
DORIS_HOST=doris-fe.default.svc.cluster.local
DORIS_PORT=9030
DORIS_USER=root
DORIS_PASSWORD=your-doris-password
DORIS_DB=ragas_evaluation
DORIS_TABLE=evaluation_results

# 采样配置
SAMPLE_RATE_RANDOM=0.015  # 1.5% 随机采样
SAMPLE_RATE_CORE_SCENE=0.04  # 核心场景 4% 采样
SAMPLE_ABNORMAL_LATENCY=0.8  # 延迟>800ms 视为异常
